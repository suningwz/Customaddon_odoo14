<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="sendo_categories_form_view" model="ir.ui.view">
            <field name="name">sendo.categories.form</field>
            <field name="model">sendo.categories</field>
            <field name="arch" type="xml">
                <form string="Sendo Categories" create="false">
                    <sheet>
                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <field name="name" placeholder="Category Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="category_id"/>
                            </group>
                            <group>
                                <field name="level"/>
                                <field name="parent_id"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="sendo_categories_tree_view" model="ir.ui.view">
            <field name="name">sendo.categories.tree</field>
            <field name="model">sendo.categories</field>
            <field name="arch" type="xml">
                <tree string="Sendo Categories" create="false" sample="1">
                    <field name="category_id"/>
                    <field name="name"/>
                    <field name="sendo_parent_id"/>
                    <field name="level"/>
                    <field name="has_called"/>
                    <!--                    <field name="count_category"/>-->
                    <!--                    <field name="count_category_child"/>-->
                </tree>
            </field>
        </record>

        <record id="sendo_categories_act_window" model="ir.actions.act_window">
            <field name="name">Sendo Categories</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sendo.categories</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There are sendo's property, you only have permission to view.
                </p>
            </field>
        </record>

