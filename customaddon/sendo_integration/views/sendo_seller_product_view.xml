        <!--        </record>-->

        <menuitem
                name="Sendo Integration"
                id="sendo_seller_product_menu"
                action="sendo_seller_product_act_window"
                web_icon="sendo_integration,static/description/icon.png"/>

        <menuitem
                name="My Product"
                id="sendo_seller_product_menu_inherit"
                parent="sendo_seller_product_menu"
                action="sendo_seller_product_act_window"
                sequence="10"/>

        <menuitem
                name="Connect to Sendo Integration"
                id="sendo_seller_connect_action"
                parent="sendo_seller_product_menu"
                action="sendo_seller_connect_act_window"
                sequence="50"/>
    </data>
