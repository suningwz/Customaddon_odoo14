<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="tiki_categories_form_view" model="ir.ui.view">
            <field name="name">tiki.categories.form</field>
            <field name="model">tiki.categories</field>
            <field name="arch" type="xml">
                <form string="Categories" create="false">
                    <sheet>
                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <field name="name" placeholder="Category Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="category_id"/>
                                <field name="status"/>
                            </group>
                            <group>
                                <field name="is_primary"/>
                                <field name="parent_id"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="tiki_categories_tree_view" model="ir.ui.view">
            <field name="name">tiki.categories.tree</field>
            <field name="model">tiki.categories</field>
            <field name="arch" type="xml">
                <tree string="Categories" create="false">
                    <field name="category_id"/>
                    <field name="name"/>
                    <field name="status"/>
                    <field name="is_primary"/>
                </tree>
            </field>
        </record>
        <record id="tiki_categories_search" model="ir.ui.view">
            <field name="name">tiki.categories.search</field>
            <field name="model">tiki.categories</field>
            <field name="arch" type="xml">
                <search string="Available Categories">
<!--                    <filter string="New" name="draft" domain="[('state','=','open')]"/>-->
                    <filter name="is_primary" string="Primary" domain="[('is_primary', '=', True)]"/>
                </search>
            </field>
        </record>
        <record id="tiki_categories_act_window" model="ir.actions.act_window">
            <field name="name">Categories</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">tiki.categories</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{"search_default_is_primary":1}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There are tiki's property, you only have permission to view.
                </p>
            </field>
        </record>
        <menuitem
                name="Categories"
                id="tiki_categories_menu"
                parent="tiki_seller_product_menu"
                action="tiki_categories_act_window"/>
    </data>
</odoo>