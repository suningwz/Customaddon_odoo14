        <xpath expr=".">
            <script type="application/javascript"
                    src="/badge_menu/static/src/js/menu.js"
                    />
        </xpath>
    </template>
    <template id="qunit_suite" inherit_id="web.qunit_suite">
        <xpath expr="//t[@t-set='head']" position="inside">
            <script type="application/javascript"
                    src="/badge_menu/static/tests/js/menu.js"
                    />
        </xpath>
    </template>
</odoo>
